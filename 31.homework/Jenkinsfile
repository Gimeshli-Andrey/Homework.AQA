pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Извлечение кода из репозитория
                git 'https://your-repo-url.git' // Замените на URL вашего репозитория
            }
        }

        stage('Build and Run with Docker Compose') {
            steps {
                // Запуск контейнеров с помощью docker-compose
                sh 'docker-compose up --build -d'
            }
        }

        stage('Run Tests') {
            steps {
                // Запуск тестов в контейнере
                sh 'docker-compose exec app pytest --alluredir=allure-results tests/test_registration.py'
            }
        }

        stage('Publish Test Results') {
            steps {
                // Сбор результатов тестирования и их публикация в Jenkins
                allure([
                    results: [[path: 'allure-results']],
                    report: 'allure-report'
                ])
            }
        }
    }

    post {
        always {
            // Отправка электронных писем с результатами тестирования
            mail to: 'InsertYour@Mail.Here',
                 subject: "Jenkins Build - ${currentBuild.currentResult}",
                 body: "Проверьте результаты тестирования: ${env.BUILD_URL}"
        }
    }
}