pipeline {
    agent {
        docker {
            image 'python:3.11'
            args '-v $PWD:/app'
            user 'root'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([
                        $class: 'GitSCM', 
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[url: 'https://github.com/Gimeshli-Andrey/Homework.AQA.git']]
                    ])
                    
                    dir('31.homework') {
                        echo "Now in 31.homework directory"
                    }
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh '''
                        python3 -m venv venv
                        source venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh '''
                        source venv/bin/activate
                        pytest --disable-warnings --maxfail=1
                    '''
                }
            }
        }

        stage('Publish Test Results') {
            steps {
                junit '**/test-results.xml'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
