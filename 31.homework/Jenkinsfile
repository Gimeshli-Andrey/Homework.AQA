pipeline {
    agent {
        docker {
            image 'python:3.11'  // Указываем правильный образ для контейнера
            args '-v $PWD:/app'  // Монтируем текущую директорию в контейнер
        }
    }

    environment {
        EMAIL_RECIPIENT = 'InsertYour@Mail.Here'  // Если нужно будет использовать email позже
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Python') {
            steps {
                sh '''
                    apt-get update
                    apt-get install -y python3 python3-dev python3-pip python3.11-venv
                    rm -rf venv
                    python3 -m venv venv
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    source venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    source venv/bin/activate
                    python3 -m pytest --alluredir=allure-results --disable-warnings --junitxml=test-results.xml
                '''
            }
            post {
                always {
                    junit 'test-results.xml'
                }
            }
        }

        stage('Publish Test Results') {
            steps {
                allure([
                    includeProperties: false,
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'allure-results']]
                ])
            }
        }
    }

    post {
        cleanup {
            deleteDir()  // Убирает временные файлы
        }
    }
}
