pipeline {
    agent any

    environment {
        PYTHON_VERSION = '3.12.6'  // Обновленная версия Python
        ALLURE_VERSION = '2.22.1'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Python and Dependencies') {
            steps {
                sh '''
                    # Проверяем, установлен ли Python
                    python3 --version || { echo "Python 3 is not installed, installing now..."; sudo apt-get update && sudo apt-get install -y python3 python3-pip; python3 --version; }
                    python3 -m pip install --upgrade pip
                    python3 -m pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    python3 -m pytest --alluredir=allure-results --disable-warnings
                '''
            }
        }

        stage('Publish Test Results') {
            steps {
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'allure-results']]
                ])
            }
        }
    }

    post {
        always {
            emailext (
                to: 'InsertYour@Mail.Here',
                subject: "${currentBuild.currentResult}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """
                    <p>Статус збірки: ${currentBuild.currentResult}</p>
                    <p>Номер збірки: ${env.BUILD_NUMBER}</p>
                    <p>Переглянути лог збірки: <a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>
                    <p>Звіт тестування Allure: <a href='${env.BUILD_URL}allure'>Allure Report</a></p>
                """,
                mimeType: 'text/html',
                attachLog: true
            )
            cleanWs()
        }
    }
}