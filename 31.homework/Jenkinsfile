pipeline {
    agent any

    environment {
        // Визначення змінних середовища
        PYTHON_VERSION = '3.12.6'  // Обновлена версия Python
        ALLURE_VERSION = '2.22.1'
    }

    stages {
        // Крок для вилучення коду з репозиторію
        stage('Checkout') {
            steps {
                // Вилучення коду з репозиторію
                checkout scm
            }
        }

        // Крок для встановлення залежностей проекту
        stage('Install Dependencies') {
            steps {
                sh '''
                    python3 -m pip install --upgrade pip  # Используйте python3, так как у вас версия 3.12.6
                    pip3 install -r requirements.txt
                '''
            }
        }

        // Крок для запуску автотестів
        stage('Run Tests') {
            steps {
                // Запуск тестів з використанням pytest та генерація звіту Allure
                sh '''
                    python3 -m pytest --alluredir=allure-results --disable-warnings  # Используйте python3
                '''
            }
        }

        // Крок для збору результатів тестування та їх публікації у Jenkins
        stage('Publish Test Results') {
            steps {
                // Публікація результатів тестів з використанням Allure
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'allure-results']]
                ])
            }
        }
    }

    // Налаштування дій після виконання пайплайну
    post {
        always {
            // Відправка email з результатами тестування
            emailext (
                to: 'InsertYour@Mail.Here',
                subject: "${currentBuild.currentResult}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """
                    <p>Статус збірки: ${currentBuild.currentResult}</p>
                    <p>Номер збірки: ${env.BUILD_NUMBER}</p>
                    <p>Переглянути лог збірки: <a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>
                    <p>Звіт тестування Allure: <a href='${env.BUILD_URL}allure'>Allure Report</a></p>
                """,
                mimeType: 'text/html',
                attachLog: true
            )
            
            // Очищення робочої області
            cleanWs()
        }
    }
}
