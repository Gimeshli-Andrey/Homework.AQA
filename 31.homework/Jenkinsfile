pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    /usr/bin/python3 -m pip install --user --upgrade pip
                    /usr/bin/python3 -m pip install --user -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '/usr/bin/python3 -m pytest --alluredir=allure-results --disable-warnings'
            }
        }

        stage('Publish Test Results') {
            steps {
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'allure-results']]
                ])
            }
        }
    }

    post {
        always {
            emailext (
                to: 'InsertYour@Mail.Here',
                subject: "Build ${currentBuild.currentResult}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """
                    <p>Статус збірки: ${currentBuild.currentResult}</p>
                    <p>Номер збірки: ${env.BUILD_NUMBER}</p>
                    <p>Переглянути результати: ${env.BUILD_URL}</p>
                    <p>Звіт тестування Allure: ${env.BUILD_URL}allure</p>
                """,
                mimeType: 'text/html',
                attachLog: true
            )
        }
    }
}
