pipeline {
    agent any

    environment {
        EMAIL_RECIPIENT = 'InsertYour@Mail.Here'
        VENV_PATH = "${WORKSPACE}/venv"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/Gimeshli-Andrey/Homework.AQA.git'
                
                sh 'cd 31.homework'
            }
        }

        stage('Настройка Python') {
            steps {
                sh '''
                    cd 31.homework
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                '''
            }
        }

        stage('Установка зависимостей') {
            steps {
                sh '''
                    cd 31.homework
                    . venv/bin/activate
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Запуск тестов') {
            steps {
                sh '''
                    cd 31.homework
                    . venv/bin/activate
                    python3 -m pytest --alluredir=allure-results --junitxml=test-results.xml tests/
                '''
            }
            post {
                always {
                    junit 'test-results.xml'
                }
            }
        }

        stage('Генерация Allure отчета') {
            steps {
                script {
                    allure([
                        includeProperties: false,
                        reportBuildPolicy: 'ALWAYS',
                        results: [[path: 'allure-results']]
                    ])
                }
            }
        }
    }

    post {
        always {
            emailext (
                to: "${EMAIL_RECIPIENT}",
                subject: "Результат сборки ${currentBuild.currentResult}: ${env.JOB_NAME} [${env.BUILD_NUMBER}]",
                body: """
                    <p>Статус: ${currentBuild.currentResult}</p>
                    <p>Номер сборки: ${env.BUILD_NUMBER}</p>
                    <p>URL сборки: ${env.BUILD_URL}</p>
                    <p>Отчет Allure: ${env.BUILD_URL}allure</p>
                """,
                mimeType: 'text/html',
                attachLog: true
            )
            
            sh 'rm -rf venv'
        }
        
        cleanup {
            deleteDir()
        }
    }
}
