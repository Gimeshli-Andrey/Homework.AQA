pipeline {
    agent {
        docker {
            filename 'Dockerfile'
            args '-v $PWD:/app'
        }
    }

    environment {
        EMAIL_RECIPIENT = 'InsertYour@Mail.Here'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Python') {
            steps {
                sh '''
                    apt-get update
                    apt-get install -y python3 python3-dev python3-pip python3.11-venv
                    rm -rf venv
                    python3 -m venv venv
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    source venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    source venv/bin/activate
                    python3 -m pytest --alluredir=allure-results --disable-warnings --junitxml=test-results.xml
                '''
            }
            post {
                always {
                    junit 'test-results.xml'
                }
            }
        }

        stage('Publish Test Results') {
            steps {
                allure([
                    includeProperties: false,
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'allure-results']]
                ])
            }
        }
    }

    post {
        always {
            emailext (
                to: "${EMAIL_RECIPIENT}",
                subject: "Build ${currentBuild.currentResult}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """
                    <p>Статус сборки: ${currentBuild.currentResult}</p>
                    <p>Номер збірки: ${env.BUILD_NUMBER}</p>
                    <p>Переглянути результати: ${env.BUILD_URL}</p>
                    <p>Звіт тестування Allure: ${env.BUILD_URL}allure</p>
                """,
                mimeType: 'text/html',
                attachLog: true
            )
        }
        cleanup {
            deleteDir()
        }
    }
}
