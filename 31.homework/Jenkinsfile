pipeline {
    agent any

    environment {
        PYTHON_VERSION = '3.9' // Версия Python
        ALLURE_VERSION = '2.22.1' // Версия Allure
    }

    stages {
        // Крок для вилучення коду з репозиторію
        stage('Checkout') {
            steps {
                checkout scm // Вилучення коду з репозиторію
            }
        }

        // Крок для встановлення залежностей проекту
        stage('Install Dependencies') {
            steps {
                sh '''
                    # Перевірка чи встановлений Python
                    python3 --version || { echo "Python 3 is not installed, installing now..."; sudo apt-get update && sudo apt-get install -y python3 python3-pip; python3 --version; }

                    # Перевірка чи встановлений pip
                    python3 -m pip --version || { echo "pip is not installed, installing now..."; sudo apt-get install -y python3-pip; }

                    # Оновлення pip
                    python3 -m pip install --upgrade pip

                    # Встановлення залежностей з requirements.txt
                    python3 -m pip install -r requirements.txt
                '''
            }
        }

        // Крок для запуску автотестів
        stage('Run Tests') {
            steps {
                sh '''
                    # Запуск тестів з використанням pytest
                    python3 -m pytest --alluredir=allure-results --disable-warnings
                '''
            }
        }

        // Крок для збору результатів тестування та їх публікації у Jenkins
        stage('Publish Test Results') {
            steps {
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'allure-results']] // Публікація результатів тестів через Allure
                ])
            }
        }
    }

    // Налаштування дій після виконання пайплайну
    post {
        always {
            // Відправка email з результатами тестування
            emailext (
                to: 'gimeshli.a@gmail.com', // Пошта Гілеля
                subject: "${currentBuild.currentResult}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """
                    <p>Статус збірки: ${currentBuild.currentResult}</p>
                    <p>Номер збірки: ${env.BUILD_NUMBER}</p>
                    <p>Переглянути лог збірки: <a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>
                    <p>Звіт тестування Allure: <a href='${env.BUILD_URL}allure'>Allure Report</a></p>
                """,
                mimeType: 'text/html',
                attachLog: true
            )
<<<<<<< HEAD

