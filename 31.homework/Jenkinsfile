pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'ncase-tests'
        EMAIL_RECIPIENT = 'InsertYour@Mail.Here'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(DOCKER_IMAGE)
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    docker.image(DOCKER_IMAGE).inside {
                        sh 'pytest -v --alluredir=allure-results'
                    }
                }
            }
        }
    }
    
    post {
        always {
            // Генерация отчета Allure
            allure([
                includeProperties: false,
                jdk: '',
                properties: [],
                reportBuildPolicy: 'ALWAYS',
                results: [[path: 'allure-results']]
            ])
            
            // Email notification
            emailext (
                subject: "NCASE Tests Status: ${currentBuild.result}",
                body: """
                    <p>Build Status: ${currentBuild.result}</p>
                    <p>Build Number: ${BUILD_NUMBER}</p>
                    <p>Check reports:</p>
                    <ul>
                        <li><a href='${BUILD_URL}allure'>Allure Report</a></li>
                    </ul>
                    
                    <h3>Failed Tests (if any):</h3>
                    <pre>${currentBuild.description ?: 'No failed tests'}</pre>
                """,
                to: env.EMAIL_RECIPIENT,
                mimeType: 'text/html',
                attachLog: true
            )
            
            cleanWs()
        }
    }
}